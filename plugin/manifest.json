{
	"manifest_version": 3,
	"name": "NNote",
	"version": "1.0.0",
	"description": "笔记本",
	"icons": {
		"16": "img/icon/icon.png",
		"48": "img/icon/icon.png",
		"128": "img/icon/icon.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_icon": "img/icon/icon.png",
		"default_title": "NNote笔记",
		"default_popup": "popup.html"
	},
	"host_permissions": [
		"*://*.sr7.top/",
		"https://sr7.top/*"
	],
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"js/jquery-3.6.js",
				"js/main.js"
			],
			"css": [
				"css/wtc_cr.css",
				"css/wtechtec-cr-form.css"
			],
			"run_at": "document_end"
		}
	],
	"permissions": [
		"tabs",
		"contextMenus",
		"cookies"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"img/*"
			],
			"matches": [
				"<all_urls>"
			],
			"extension_ids": []
		}
	]
}